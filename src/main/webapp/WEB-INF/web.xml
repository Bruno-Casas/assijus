<?xml version="1.0" encoding="utf-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	version="2.5">

	<servlet>
		<servlet-name>AssijusServlet</servlet-name>
		<servlet-class>br.jus.trf2.assijus.AssijusServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>AssijusServlet</servlet-name>
		<url-pattern>/api/v1/*</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>ClientCertServlet</servlet-name>
		<servlet-class>br.jus.trf2.assijus.ClientCertServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>ClientCertServlet</servlet-name>
		<url-pattern>/auth-client-cert/*</url-pattern>
	</servlet-mapping>

	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
	</welcome-file-list>
</web-app>
